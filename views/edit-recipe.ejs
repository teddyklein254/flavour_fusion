<div class="px-4 py-4 my-5 text-center"></div>
<h1 class="display-5 fw-bold">Edit Your Masterpiece</h1>
<div class="col-lg-6 mx-auto">
	<p class="lead">Transform Your Recipes into Culinary Masterpieces!</p>
</div>

<% if(infoSubmitObj != '') { %>
<div class="col-8 alert alert-success" role="alert">
	<%= infoSubmitObj %>
</div>
<% } %>

<% if(infoErrorObj != '') { %>
<div class="col-8 alert alert-danger" role="alert">
	<%= infoErrorObj[0].message %>
</div>
<% } %>

<form action="/recipe/<%= recipe._id %>/edit" enctype="multipart/form-data" method="post">
    <div class="row g-3">
        <input type="hidden" name="recipeId" value="<%= recipe._id %>">
        
        <div class="col-12">
            <label for="email" class="form-label"><h6>Email:</h6></label>
            <input type="email" name="email" id="email" class="form-control" value="<%= recipe.email %>" required>
        </div>

        <div class="col-12">
            <label for="title" class="form-label"><h6>Recipe Title:</h6></label>
            <input type="text" name="name" id="name" class="form-control" value="<%= recipe.name %>" required>
        </div>

        <div class="col-12">
            <label for="description" class="form-label"><h6>Description:</h6></label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="5"><%= recipe.description %></textarea>
        </div>

        <div class="col-12">
            <label for="ingredients" class="form-label"><h6>Ingredients:</h6></label>
            <small>Example:</small>
            <div class="ingredientList">
                <% recipe.ingredients.forEach(function(ingredient) { %>
                <div class="ingredientDiv mb-1">
                    <input type="text" name="ingredients[]" class="form-control" value="<%= ingredient %>" required>
                </div>
                <% }); %>
            </div>
        </div>

        <div class="col-12">
            <label for="category"><h6>Select Category:</h6></label>
            <select class="form-select form-control" name="category" aria-label="category">
                <option <%= recipe.category === 'Thai' ? 'selected' : '' %> value="Thai">Thai</option>
                <option <%= recipe.category === 'American' ? 'selected' : '' %> value="American">American</option>
                <option <%= recipe.category === 'Italian' ? 'selected' : '' %> value="Italian">Italian</option>
                <option <%= recipe.category === 'Kenyan' ? 'selected' : '' %> value="Kenyan">Kenyan</option>
                <option <%= recipe.category === 'Mexican' ? 'selected' : '' %> value="Mexican">Mexican</option>
                <option <%= recipe.category === 'Japanese' ? 'selected' : '' %> value="Japanese">Japanese</option>
                <option <%= recipe.category === 'Spanish' ? 'selected' : '' %> value="Spanish">Spanish</option>
            </select>
        </div>

        <div class="col-12">
            <label for="image"><h6>Recipe Image:</h6></label>
            <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-10">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </div>
</form>
