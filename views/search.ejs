<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if (recipes && recipes.length > 0) { %> <!-- Check if recipes exist -->
    <% recipes.forEach(function(recipe) { %> <!-- Loop through each recipe -->
      <a href="/recipes/<%= recipe.id %>" class="col text-center category_link">
        <div class="category_img category_img--lg shadow">
          <img 
            src="<%= recipe.image ? recipe.image : '/uploads/default.jpg' %>" 
            alt="<%= recipe.title %>" 
            loading="lazy" 
            width="200" 
            height="330"
          >
        </div>
        <div class="pt-1"><%= recipe.title %></div> <!-- Use recipe.title for Spoonacular API -->
      </a>
    <% }) %>
  <% } else { %>
    <div class="col-12 text-center">
      <p>No recipes found. Please try searching for something else!</p>
    </div>
  <% } %>
</div>
